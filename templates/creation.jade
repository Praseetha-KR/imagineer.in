
extends base

block append vars
  - bodyclass = 'project-detail'

block prepend title
  | #{ page.title + " - "}

block sitenav 
  div.site-nav-icons.flushright
    a(href='/articles/')
      span.icon-book
    a(href='/projects/')
      span.icon-code
    a.active(href='/creations/')
      span.icon-feather
block sidebar
  div.item-header CREATIONS
  - var archives = _.chain(env.helpers.getCreations(contents)).value()
  for item in archives
    div.item
      a(href=item.url)=item.title

block header
  if page.metadata.masthead
    div.masthead
      img(src=page.metadata.masthead, alt=page.title)
  h1= page.title
block content
  article.article
    section.content!= typogr(page.html).typogrify()

