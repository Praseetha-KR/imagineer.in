doctype html
block vars
 - var bodyclass = null
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Anonymous+Pro:400,700,400italic,700italic|Merriweather:400,700,300|PT+Sans:400,700,400italic|Lato:300,400,700,400italic')
      link(rel='stylesheet', href='/assets/fonts/icomoon/style.css')
      link(rel='stylesheet', href='/assets/css/main.css')
      link(rel='stylesheet', href='/assets/css/app.css')
  body(class="bodyclass")
    div.two-pane-app
      div.top
        div.left
          a(href="/")
            span.logo
              img(src="https://imgee.s3.amazonaws.com/imgee/8dc6b1deecef41308dc50275f59fc182_w29_h30.png")
            span.site-title Praseetha KR
          block sitenav
        div.right
          p.flushright navigation 
      div.bottom
        div.left.link-silent
          block sidebar
        div.right
          block header
          block content
          block footer
